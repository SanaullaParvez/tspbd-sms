- model_class = EmployeePosition
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:employee_category_id)
      %th= model_class.human_attribute_name(:status)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @employee_positions.each do |employee_position|
      %tr
        %td= link_to employee_position.id, employee_position_path(employee_position)
        %td= employee_position.name
        %td= employee_position.employee_category_id
        %td= employee_position.status
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_employee_position_path(employee_position), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), employee_position_path(employee_position), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_employee_position_path, :class => 'btn btn-primary'
