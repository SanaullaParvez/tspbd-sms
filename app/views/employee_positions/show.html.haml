- model_class = EmployeePosition
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @employee_position.name
%p
  %strong= model_class.human_attribute_name(:employee_category_id) + ':'
  %br
  = @employee_position.employee_category_id
%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @employee_position.status

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), employee_positions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_employee_position_path(@employee_position), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), employee_position_path(@employee_position), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
