- model_class = EmployeeDepartment
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:code)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:status)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @employee_departments.each do |employee_department|
      %tr
        %td= link_to employee_department.id, employee_department_path(employee_department)
        %td= employee_department.code
        %td= employee_department.name
        %td= employee_department.status
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_employee_department_path(employee_department), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), employee_department_path(employee_department), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_employee_department_path, :class => 'btn btn-primary'
