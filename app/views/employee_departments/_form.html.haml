= form_for @employee_department, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :code, :class => 'control-label'
    .controls
      = f.text_field :code, :class => 'text_field'
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :status, :class => 'control-label'
    .controls
      = f.check_box :status, :class => 'check_box'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), employee_departments_path, :class => 'btn'
