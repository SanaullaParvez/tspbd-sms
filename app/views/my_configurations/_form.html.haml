= form_for @my_configuration, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :config_key, :class => 'control-label'
    .controls
      = f.text_field :config_key, :class => 'text_field'
  .control-group
    = f.label :config_value, :class => 'control-label'
    .controls
      = f.text_field :config_value, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), my_configurations_path, :class => 'btn'
