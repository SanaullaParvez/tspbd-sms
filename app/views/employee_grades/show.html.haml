- model_class = EmployeeGrade
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @employee_grade.name
%p
  %strong= model_class.human_attribute_name(:priority) + ':'
  %br
  = @employee_grade.priority
%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @employee_grade.status
%p
  %strong= model_class.human_attribute_name(:max_hours_day) + ':'
  %br
  = @employee_grade.max_hours_day
%p
  %strong= model_class.human_attribute_name(:max_hours_week) + ':'
  %br
  = @employee_grade.max_hours_week

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), employee_grades_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_employee_grade_path(@employee_grade), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), employee_grade_path(@employee_grade), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
