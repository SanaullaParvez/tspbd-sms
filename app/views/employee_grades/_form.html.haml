= form_for @employee_grade, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :priority, :class => 'control-label'
    .controls
      = f.number_field :priority, :class => 'number_field'
  .control-group
    = f.label :status, :class => 'control-label'
    .controls
      = f.check_box :status, :class => 'check_box'
  .control-group
    = f.label :max_hours_day, :class => 'control-label'
    .controls
      = f.number_field :max_hours_day, :class => 'number_field'
  .control-group
    = f.label :max_hours_week, :class => 'control-label'
    .controls
      = f.number_field :max_hours_week, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), employee_grades_path, :class => 'btn'
