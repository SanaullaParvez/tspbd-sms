- model_class = Student
.page-header
  %h1=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human.titleize
-unless @last_admitted_student.nil?
  %p.flash-msg
    = "#{t('flash.admission_no_of_last_stud')} #{@last_admitted_student.admission_no}"

= render :partial => "form"
