- model_class = EmployeeCategory
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:prefix)
      %th= model_class.human_attribute_name(:status)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @employee_categories.each do |employee_category|
      %tr
        %td= link_to employee_category.id, employee_category_path(employee_category)
        %td= employee_category.name
        %td= employee_category.prefix
        %td= employee_category.status
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_employee_category_path(employee_category), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), employee_category_path(employee_category), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_employee_category_path, :class => 'btn btn-primary'
