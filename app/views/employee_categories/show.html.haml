- model_class = EmployeeCategory
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @employee_category.name
%p
  %strong= model_class.human_attribute_name(:prefix) + ':'
  %br
  = @employee_category.prefix
%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @employee_category.status

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), employee_categories_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_employee_category_path(@employee_category), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), employee_category_path(@employee_category), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
